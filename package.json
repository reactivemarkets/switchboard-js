{
  "name": "root",
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:sdk": "lerna run build --scope='*/*-sdk' --stream",
    "build:terminal": "lerna run build --scope='*/*-terminal' --stream",
    "clean": "run-s clean:packages clean:modules",
    "clean:packages": "lerna run clean",
    "clean:modules": "lerna clean --yes",
    "convert": "run-s link bootstrap",
    "link": "lerna link convert",
    "lint": "eslint . --ext ts --ext tsx --quiet",
    "lint:fix": "eslint . --ext ts --ext tsx --quiet --fix",
    "test": "lerna run test --stream",
    "prepublishOnly": "npm run build",
    "publish": "lerna publish from-package --yes",
    "release": "lerna version --yes",
    "release:pre": "lerna version --conventional-prerelease --yes",
    "release:grad": "lerna version --conventional-graduate --yes",
    "start:browser": "lerna run start --scope='*/*-browser' --stream",
    "start:node": "node -r dotenv/config ./packages/examples-node/lib/index.js",
    "start:terminal": "node -r dotenv/config ./packages/terminal/lib/index.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/blessed": "^0.1.17",
    "@types/flatbuffers": "^1.10.0",
    "@types/jest": "^26.0.20",
    "@types/long": "^4.0.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.14.1",
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^2.0.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@reactivemarkets/switchboard-examples-browser": "file:packages/examples-browser",
    "@reactivemarkets/switchboard-examples-node": "file:packages/examples-node",
    "@reactivemarkets/switchboard-sdk": "file:packages/sdk",
    "@reactivemarkets/switchboard-terminal": "file:packages/terminal"
  }
}
