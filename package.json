{
  "name": "root",
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:sdk": "lerna run build --scope='*/*-sdk' --stream",
    "build:terminal": "lerna run build --scope='*/*-terminal' --stream",
    "clean": "run-s clean:packages clean:modules",
    "clean:packages": "lerna run clean",
    "clean:modules": "lerna clean --yes",
    "convert": "run-s link bootstrap",
    "link": "lerna link convert",
    "lint": "eslint . --ext ts --ext tsx --quiet",
    "lint:fix": "eslint . --ext ts --ext tsx --quiet --fix",
    "test": "lerna run test --stream",
    "prepublishOnly": "npm run build",
    "publish": "lerna publish from-package --no-git-reset --yes",
    "release": "lerna version --yes",
    "start:browser": "lerna run start --scope='*/*-browser' --stream",
    "start:node": "node -r dotenv/config ./packages/examples-node/lib/index.js",
    "start:terminal": "node -r dotenv/config ./packages/terminal/lib/index.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/blessed": "^0.1.17",
    "@types/flatbuffers": "^1.10.0",
    "@types/jest": "^26.0.0",
    "@types/long": "^4.0.1",
    "@types/react": "^16.9.38",
    "@types/react-dom": "^16.9.8",
    "@types/ws": "^7.2.5",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "clean-webpack-plugin": "^3.0.0",
    "dotenv": "^8.2.0",
    "dotenv-webpack": "^1.8.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.1",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "jest": "^26.0.1",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@reactivemarkets/platform-examples-browser": "file:packages/examples-browser",
    "@reactivemarkets/platform-examples-node": "file:packages/examples-node",
    "@reactivemarkets/platform-sdk": "file:packages/sdk",
    "@reactivemarkets/platform-terminal": "file:packages/terminal"
  }
}
