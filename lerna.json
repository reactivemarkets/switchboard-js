{
  "npmClient": "npm",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "0.3.0",
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "publish": {
      "preDistTag": "next",
      "noGitReset": true
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "gitRemote": "origin",
      "message": "chore(release): publish %v"
    }
  },
  "ignoreChanges": [
    ".dependabot/",
    ".github/",
    ".vscode/",
    "**/__tests__/**",
    "**/*.md"
  ]
}
